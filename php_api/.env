# Application Settings
APP_NAME="honda_app"
APP_ENV=development
APP_DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ecommerce_db
DB_USER=root
DB_PASS=yourpassword
DB_CHARSET=utf8mb4

# API Security
API_KEY=flask-backend-token-12345
JWT_SECRET=your-super-secret-jwt-key-change-this
TOKEN_EXPIRY=86400

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_REQUESTS=true
LOG_FILE=logs/api.log